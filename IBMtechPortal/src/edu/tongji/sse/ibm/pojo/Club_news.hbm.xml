<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.tongji.sse.ibm.pojo">
	<class name="Club_news" lazy="false">
		<id name="id" type="java.lang.Integer">
			<column name="id"></column>
			<generator class="native"></generator>
		</id>
		<property name="title" type="java.lang.String">
			<column name="title"></column>
		</property>
		<property name="content" type="java.lang.String">
			<column name="content" sql-type="TEXT"></column>
		</property>
		<property name="createTime" type="java.sql.Timestamp">
			<column name="createTime"></column>
		</property>

		<set name="files" cascade="all" lazy="false">
			<key column="file_id" />
			<one-to-many class="File" />
		</set>
	</class>
</hibernate-mapping>